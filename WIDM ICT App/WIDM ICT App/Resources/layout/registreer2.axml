<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="25px"
        android:minHeight="25px">
        <TextView
            android:text="Vul de onderstaande velden in"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff008000"
            android:id="@+id/textView1" />
        <RadioGroup
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup1">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:textColor="#ff008000"
                android:text="Man"
                android:buttonTint="#ff008000"
                android:id="@+id/reg_man" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff008000"
                android:text="Vrouw"
                android:buttonTint="#ff008000"
                android:id="@+id/reg_vrouw" />
        </RadioGroup>
        <Button
            android:text="Geboorte datum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#ff008000"
            android:id="@+id/btn_reg_datum" />
        <TextView
            android:text="Vragenlijst"
            android:textColor="#ff008000"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv1" />
        <Spinner
            android:id="@+id/spinner_kleur"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/kleur_prompt" />
      <Spinner
            android:id="@+id/spinner_eten"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/eten_prompt" />
      <Spinner
            android:id="@+id/spinner_ogen"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/ogen_prompt" />
      <Spinner
            android:id="@+id/spinner_roken"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/roken_prompt" />
      <Spinner
            android:id="@+id/spinner_relatie"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/relatie_prompt" />
      <Spinner
            android:id="@+id/spinner_broerzus"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/broerzus_prompt" />
      <Spinner
            android:id="@+id/spinner_tattoo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/tattoo_prompt" />
      
      
      
      
        <TextView
            android:text=""
            android:textColor="#ff008000"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv2" />
        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="4.0dip"
            android:paddingTop="5.0dip"
            android:paddingRight="4.0dip"
            android:paddingBottom="1.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_reg_datum">
            <Button
                android:text="Annuleren"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:id="@+id/btn_reg_cancel2"
                android:layout_weight="1.0"
                android:backgroundTint="#ff008000" />
            <Button
                android:text="Registreer"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:id="@+id/btn_reg_complete"
                android:layout_weight="1.0"
                android:backgroundTint="#ff008000" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>